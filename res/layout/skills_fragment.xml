<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.hydrasoftworks.diablo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:paddingBottom="35dp"
    android:paddingTop="35dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >

            <com.hydrasoftworks.diablo.views.PassiveSkillView
                android:id="@+id/passive_skill0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.hydrasoftworks.diablo.views.PassiveSkillView
                android:id="@+id/passive_skill1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.hydrasoftworks.diablo.views.PassiveSkillView
                android:id="@+id/passive_skill2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <com.hydrasoftworks.diablo.views.SkillView
            android:id="@+id/skill0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionIcon="@drawable/skill_mouse_left" />

        <com.hydrasoftworks.diablo.views.SkillView
            android:id="@+id/skill1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionIcon="@drawable/skill_mouse_right" />

        <com.hydrasoftworks.diablo.views.SkillView
            android:id="@+id/skill2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionText="1" />

        <com.hydrasoftworks.diablo.views.SkillView
            android:id="@+id/skill3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionText="2" />

        <com.hydrasoftworks.diablo.views.SkillView
            android:id="@+id/skill4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionText="3" />

        <com.hydrasoftworks.diablo.views.SkillView
            android:id="@+id/skill5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionText="4" />
    </LinearLayout>

</ScrollView>