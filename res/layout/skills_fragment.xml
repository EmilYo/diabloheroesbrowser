<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.hydrasoftworks.diablo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="35dp"
    android:paddingTop="35dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.hydrasoftworks.diablo.views.SkillView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionIcon="@drawable/skill_mouse_left" />

        <com.hydrasoftworks.diablo.views.SkillView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionIcon="@drawable/skill_mouse_right" />

        <com.hydrasoftworks.diablo.views.SkillView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionText="1" />

        <com.hydrasoftworks.diablo.views.SkillView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionText="2" />

        <com.hydrasoftworks.diablo.views.SkillView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionText="3" />

        <com.hydrasoftworks.diablo.views.SkillView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:positionText="4" />
    </LinearLayout>

</ScrollView>