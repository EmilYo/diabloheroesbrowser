<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@drawable/imageview_shape"
        android:src="@drawable/artisans_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/blacksmith"
                android:textColor="@color/orange"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/blacksmith_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/standard_text"
                android:gravity="center" />

            <TextView
                android:id="@+id/blacksmith_hardcore_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#a30400" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/jeweler"
                android:textColor="@color/orange"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/jeweler_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/standard_text"
                android:gravity="center" />

            <TextView
                android:id="@+id/jeweler_hardcore_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#a30400" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>